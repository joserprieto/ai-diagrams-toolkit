    class Document {
        <<entity>>
        +String id
        +String title
        +String content
        +Date createdAt
        +validate() bool
        +save() void
    }

    class PDFDocument {
        <<concrete>>
        +String pdfVersion
        +generatePDF() byte[]
    }

    class HTMLDocument {
        <<concrete>>
        +String cssTheme
        +generateHTML() string
    }

    class DocumentValidator {
        <<service>>
        +validate(Document) ValidationResult
        +sanitize(String) String
    }

    class ValidationResult {
<<value-object>>
+bool isValid
+String[] errors
+String[] warnings
}

%% Relationships
Document <|-- PDFDocument: inherits
Document <|-- HTMLDocument: inherits
Document ..> DocumentValidator: uses
DocumentValidator ..> ValidationResult: returns

